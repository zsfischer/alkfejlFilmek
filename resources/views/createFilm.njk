{% extends "layout" %}

{% block scripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js"></script>
<script src="/scripts/logout.js"></script>
{% endblock %}

{% block content %}
<h2>Új Film</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}

<form class="form-horizontal" method="post"
  data-toggle="validator"
>

  {{ csrfField }}

  <div class="form-group has-feedback">
    <label for="name" class="col-lg-2 control-label">Film címe</label>
    <div class="col-lg-10">
      <input required type="text" class="form-control" id="name" name="name" placeholder="Film címe" value="{{old('name')}}">
    </div>
  </div>
  <div class="form-group has-feedback">
    <label for="mainch" class="col-lg-2 control-label">Főszereplők</label>
    <div class="col-lg-10">
      <textarea required class="form-control" rows="1" id="mainch" name="mainch" placeholder="Főszereplők">{{old('mainch')}}</textarea>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="instructions" class="col-lg-2 control-label">A film rövid leírása</label>
    <div class="col-lg-10">
      <textarea required class="form-control" rows="3" id="instructions" name="instructions" placeholder="A film leírása röviden">{{old('instructions')}}</textarea>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="runningtime" class="col-lg-2 control-label">Játékidő(perc)</label>
    <div class="col-lg-10">
      <input required type="text" class="form-control" id="runningtime" name="runningtime" placeholder="Játékidő" value="{{old('running time')}}">
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="release" class="col-lg-2 control-label">Megjelenés éve</label>
    <div class="col-lg-10">
      <input required type="text" class="form-control" id="release" name="release" placeholder="Megjelenés éve">{{old('release')}}</input>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="IMDb" class="col-lg-2 control-label">IMDb értékelés</label>
    <div class="col-lg-10">
      <input required type="text" class="form-control" id="IMDb" name="IMDb" placeholder="IMDb">{{old('IMDb')}}</input>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="category_id" class="col-lg-2 control-label">Kategória</label>
    <div class="col-lg-10">
      <select class="form-control" id="category_id" name="category_id">
        {% for category in categories %}
        <option value="{{ category.id }}"
          {% if category.id == old('category_id') %}
          selected
          {% endif %}
        >{{ category.name }}</option>
        {% endfor %}
      </select>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-danger">Mégsem</button>
      <button type="submit" class="btn btn-success">Küldés</button>
    </div>
  </div>
</form>

{% endblock %}