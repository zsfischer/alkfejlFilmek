{% extends "layout" %}

{% block scripts %}
<script src="/scripts/delete.js"></script>
<script src="/scripts/logout.js"></script>
<script src="/scripts/login.js"></script>
<script src="/scripts/register.js"></script>
{% endblock %}

{% block content %}

<table class="table table-striped table-hover ">
  <tbody>
  <thead>
  {% if film.category.id == 1 %}
    <tr class="active">
      <th><h4>{{ film.name }}</h4></th>
      <th></th>
    </tr>
  {% endif %}
  {% if film.category.id == 2 %}
    <tr class="danger">
      <th><h4>{{ film.name }}</h4></th>
      <th></th>
    </tr>
  {% endif %}
  {% if film.category.id == 3 %}
    <tr class="warning">
      <th><h4>{{ film.name }}</h4></th>
      <th></th>
    </tr>
  {% endif %}
  {% if film.category.id == 4 %}
    <tr class="success">
      <th><h4>{{ film.name }}</h4></th>
      <th></th>
    </tr>
  {% endif %}
  {% if film.category.id == 5 %}
    <tr class="info">
      <th><h4>{{ film.name }}</h4></th>
      <th></th>
    </tr>
  {% endif %}
  {% if film.category.id == 6 %}
    <tr class="primary">
      <th><h4>{{ film.name }}</h4></th>
      <th></th>
    </tr>
  {% endif %}
  </thead>
    <tr>
      <td>Filmcím</td>
      <td>{{ film.name }}</td>
    </tr>
        <tr>
      <td>Kategória</td>
      <td>{{ film.category.name }}</td>
    </tr>
        <tr>
      <td>Főszereplők</td>
      <td>{{ film.mainch }}</td>
    </tr>
     </tr>
        <tr>
      <td>Játékidő(perc)</td>
      <td>{{ film.runningtime }}</td>
    </tr>
        <tr>
      <td>IMDb értékelés</td>
      <td>{{ film.IMDb }}</td>
    </tr>
        <tr>
      <td>Megjelenés éve</td>
      <td>{{ film.release }}</td>
    </tr>
    <tr>
      <td>Leírás</td>
      <td>{{ film.instructions }}</td>
    </tr>
  </tbody>
</table> 

{% if (film.user_id == currentUser.id) %}

{{ csrfField | safe }}

<a href="/films/{{ film.id }}/edit" class="btn btn-success">
    Szerkeszt
</a>
<a id="btnDelete" href="/films/{{ film.id }}/delete" class="btn btn-danger">
    Töröl
</a>

<span class="help-block"></span>

<div class="modal fade confirm-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
        <div class="modal-body">
            Biztosan törölni szeretnéd?
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-success modal-ok" data-dismiss="modal">OK</button>
            <button type="button" class="btn btn-danger modal-cancel" data-dismiss="modal">Mégse</button>
        </div>
        </div>
    </div>
</div>

{% endif %}

{% endblock %}